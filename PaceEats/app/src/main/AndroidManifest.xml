<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.kevinlutz.paceeats">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PaceEats">
        <activity
            android:name="me.kevinlutz.paceeats.AddWorkout"
            android:exported="true" />
        <activity
            android:name="me.kevinlutz.paceeats.AddWeightActivity"
            android:exported="false"
            android:label="Add Weight Activity"
            android:parentActivityName="me.kevinlutz.paceeats.WeightActivity" />
        <activity
            android:name="me.kevinlutz.paceeats.SettingsActivity"
            android:exported="true"
            android:parentActivityName="me.kevinlutz.paceeats.MoreActivity"/>
        <activity
            android:name="me.kevinlutz.paceeats.AboutActivity"
            android:exported="true"
            android:parentActivityName="me.kevinlutz.paceeats.MoreActivity" />
        <activity
            android:name="me.kevinlutz.paceeats.FoodRecommendations"
            android:exported="true"
            android:parentActivityName="me.kevinlutz.paceeats.MoreActivity" />
        <activity
            android:name="me.kevinlutz.paceeats.SetGoalsActivity"
            android:exported="true" />
        <activity
            android:name="me.kevinlutz.paceeats.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.kevinlutz.paceeats.NutritionActivity"
            android:label="Nutrition Activity"
            android:parentActivityName="me.kevinlutz.paceeats.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.kevinlutz.paceeats.MainActivity" />
        </activity>
        <activity
            android:name="me.kevinlutz.paceeats.WeightActivity"
            android:label="Weight Activity"
            android:parentActivityName="me.kevinlutz.paceeats.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.kevinlutz.paceeats.MainActivity" />
        </activity>
        <activity
            android:name="me.kevinlutz.paceeats.MoreActivity"
            android:label="More Activity"
            android:parentActivityName="me.kevinlutz.paceeats.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.kevinlutz.paceeats.MainActivity" />
        </activity>
        <activity
            android:name="me.kevinlutz.paceeats.MainActivity"
            android:exported="true" />
    </application>

</manifest>