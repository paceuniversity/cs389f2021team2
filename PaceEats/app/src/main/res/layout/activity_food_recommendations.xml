<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodRecommendations">
    <Button
        android:id="@+id/button_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/theme_color"
        android:onClick="launchHome"
        android:text="@string/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_nutrition"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_nutrition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/theme_color"
        android:onClick="launchNutrition"
        android:text="@string/nutrition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_weight" />

    <Button
        android:id="@+id/button_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/theme_color"
        android:onClick="launchWeight"
        android:text="@string/weight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_more" />

    <Button
        android:id="@+id/button_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/theme_color"
        android:onClick="launchMore"
        android:text="@string/button_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextRec1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:ems="10"
        android:gravity="bottom|start|top"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:text="Rice Bowl"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextRec1text"
        android:layout_width="394dp"
        android:layout_height="160dp"
        android:background="@color/theme_color"
        android:ems="10"
        android:gravity="bottom|start|top"
        android:inputType="textMultiLine"
        android:text="First start with white rice from the Chinese station. Order a turkey burger with peppers and onions from the Grill Station. Ask them to chop the burger. Then add the chopped burger with your toppings to the white rice. Add sauce if you would like."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRec1" />

    <EditText
        android:id="@+id/editTextRec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:ems="10"
        android:gravity="bottom|start|top"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:text="Wrap"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="227dp" />

    <EditText
        android:id="@+id/editTextRec2text"
        android:layout_width="380dp"
        android:layout_height="167dp"
        android:background="@color/theme_color"
        android:ems="10"
        android:gravity="bottom|start|top"
        android:inputType="textMultiLine"
        android:text="For a nice yummy wrap from the Sandwich Station order a whole wheat, spinach or tomato wrap. Add grilled chicken, mozzarella cheese, roasted red peppers and a little of balsamic dressing. "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRec2" />

    <EditText
        android:id="@+id/editTextRec3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:ems="10"
        android:gravity="bottom|start|top"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:text="Omlete"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="468dp" />

    <EditText
        android:id="@+id/editTextRec3text"
        android:layout_width="393dp"
        android:layout_height="171dp"
        android:background="@color/theme_color"
        android:ems="10"
        android:gravity="bottom|start|top"
        android:inputType="textMultiLine"
        android:text="Start your morning off with a healthy breakfast. From the Grill station order an egg white omlete with toppings like spinach, peppers, oinions, cheese, tomatoes, etc. You could also pair this with a yogurt or smoothie from the Smoothie Station."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRec3" />


</androidx.constraintlayout.widget.ConstraintLayout>